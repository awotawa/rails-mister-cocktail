<div class="showing justify-content-center">
  <h1><%= @cocktail.name %></h1>

  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fit %>
  <% end %>

  <ul>
    <li>Ingredients: </li>
    <li>Doses: </li>
    <% @doses.each do |dose| %>
      <li> <%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to '', dose_path(dose), method: :delete, data: { confirm: 'Do you really want to delete this dose?' }, :class => "far fa-trash-alt"  %> </li>
    <% end %>
  </ul>
  <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail), :class => "btn btn-primary" %>
  <%= link_to "Back to cocktails list", root_path, :class => "btn btn-primary" %>
</div>
